datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Post {
    id        String  @id @default(uuid())
    title     String
    content   String?
    published Boolean @default(false)
    author    User?   @relation(fields: [authorId], references: [id])
    authorId  String?
}

model User {
    id          String @id @default(uuid())
    email       String @unique
    displayName String
    userName    String
    bio         String
    imgUrl      String
    posts       Post[]
}
